<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:columnCount="1"
        android:rowCount="2"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/grid_otp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" >

      <android.support.v7.widget.Toolbar
          android:id="@+id/drawerSettingsToolbar"
          android:background="@android:color/black"
          android:layout_alignParentTop="true"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content" >

         <RelativeLayout
             android:layout_width="fill_parent"
             android:layout_height="44dp"
             android:id="@+id/toolbar_content"   >

            <TextView
                android:textSize="@dimen/text_size"
                android:layout_centerInParent="true"
                android:text="Verify Contact no."
                android:id="@+id/activity_title"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"   />
         </RelativeLayout>

      </android.support.v7.widget.Toolbar>
   </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">

        <!--<com.aperotechnologies.aftrparties.Reusables.EditTextPopUpFixed-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:singleLine="true"-->
            <!--android:layout_margin="10dp"-->
            <!--android:hint="Enter OTP"-->
            <!--android:id="@+id/edi_otp"-->
            <!--android:textSize="22sp"-->
            <!--android:inputType="number"-->
            <!--android:background="@color/white"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:drawablePadding="10dp"-->
            <!--android:paddingLeft="5dp"-->
            <!--android:textCursorDrawable="@null"-->
            <!--android:focusable="true"-->
            <!--android:maxLength="4"/>-->

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_margin="10dp"
            android:hint="Enter OTP"
            android:id="@+id/edi_otp"
            android:textSize="22sp"
            android:inputType="number"
            android:layout_gravity="center_horizontal"
            android:maxLength="4"            />

          <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txt_timer"
            android:text=""
            android:textSize="20dp"
            android:layout_margin="10dp" />

    </LinearLayout>

    <!--<Button android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/btn_generate"-->
        <!--android:text="Generate OTP"-->
        <!--android:layout_margin="10dp" />-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_verify"
        android:text="Verify"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp" />


    <com.aperotechnologies.aftrparties.Reusables.EditTextPopUpFixed
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:layout_margin="10dp"
        android:hint="Enter OTP"
        android:id="@+id/edi_verify_mobileno"
        android:textSize="22sp"
android:inputType="number"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="10dp"
        android:paddingLeft="5dp"
        android:textCursorDrawable="@null"
        android:focusable="true"
        android:maxLength="10"
        android:visibility="gone"/>


    <Button
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_submit"
        android:text="Submit"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

    </LinearLayout>


