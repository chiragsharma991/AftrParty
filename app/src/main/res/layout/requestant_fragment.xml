<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/global_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/title"
            style="@android:style/TextAppearance.Large.Inverse"
            android:textColor="@android:color/primary_text_light"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:text="Requestant Name"
            android:padding="3dp"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/status"
            style="@android:style/TextAppearance.Large.Inverse"
            android:textColor="@android:color/primary_text_light"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Status"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_margin="5dp"/>

        <!--<TextView-->
        <!--android:id="@+id/description"-->
        <!--style="@android:style/TextAppearance.Large.Inverse"-->
        <!--android:textColor="@android:color/primary_text_light"-->
        <!--android:textSize="20sp"-->
        <!--android:layout_below="@id/title"-->

        <!--android:textStyle="bold"-->
        <!--android:fontFamily="sans-serif-condensed"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--tools:text="Requestant Name"-->
        <!--android:padding="10dp" />-->

        <View
            android:id="@+id/divider_title"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/title"
            android:background="@color/com_facebook_button_send_background_color_pressed"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"     />

        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/divider_title"
            android:layout_alignWithParentIfMissing="true"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"/>

        <View
            android:id="@+id/divider_bottom"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/image"
            android:background="@color/com_facebook_button_send_background_color_pressed"            />


        <View
            android:id="@+id/btn_sep_1"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_alignBottom="@+id/image_fb"
            android:layout_below="@id/image"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@+id/image_fb"
            android:background="#ccc" />

        <ImageButton
            android:id="@+id/image_fb"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/image"
            android:layout_toLeftOf="@+id/btn_sep_2"
            android:background="@drawable/fb"
            android:padding="10dp"
            android:layout_marginTop="10dp"      />

        <View
            android:id="@+id/btn_sep_2"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_alignBottom="@id/image_fb"
            android:layout_below="@id/image"
            android:layout_margin="7dp"
            android:layout_toLeftOf="@+id/image_li"
            android:background="#ccc"/>

        <ImageButton
            android:id="@+id/image_li"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/image"
            android:layout_toLeftOf="@+id/image_oto"
            android:background="@drawable/li"
            android:padding="5dp"
            android:layout_marginTop="10dp"/>

        <View
            android:id="@+id/btn_sep_3"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_alignBottom="@id/image_fb"
            android:layout_below="@id/image"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@+id/image"
            android:background="#ccc"/>

        <ImageButton
            android:id="@+id/image_oto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/image"
            android:background="@drawable/incoming_message_bg"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_margin="10dp"/>

        <View
            android:id="@+id/divider_b"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/image_oto"
            android:background="@color/com_facebook_button_send_background_color_pressed"            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/divider_b"
            android:weightSum="1"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/decline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="10dp"
                android:text="Decline"
                android:src="@drawable/ic_launcher"
                android:textColor="@android:color/holo_red_dark"
                android:layout_weight="0.5"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/accept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="10dp"
                android:text="Accept"
                android:src="@drawable/ic_launcher"
                android:textColor="@android:color/holo_green_dark"
                android:layout_weight="0.5"
                android:layout_margin="5dp"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
