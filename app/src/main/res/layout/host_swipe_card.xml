<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/global_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/host_name"
            style="@android:style/TextAppearance.Large.Inverse"
            android:textColor="@android:color/primary_text_light"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:text="Requestant Name"
            android:padding="3dp" />

        <View
            android:id="@+id/divider_title"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/title"
            android:background="@color/com_facebook_button_send_background_color_pressed"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"     />

        <ImageView
            android:id="@+id/image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@id/divider_title"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"/>

        <View
            android:id="@+id/divider_bottom"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/image"
            android:background="@color/com_facebook_button_send_background_color_pressed"            />


        <View
            android:id="@+id/btn_sep_1"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_alignBottom="@+id/host_fb"
            android:layout_below="@id/image"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@+id/host_fb"
            android:background="#ccc" />

        <ImageButton
            android:id="@+id/host_fb"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/image"
            android:layout_toLeftOf="@+id/btn_sep_2"
            android:background="@drawable/fb"
            android:padding="10dp"
            android:layout_marginTop="10dp"      />

        <View
            android:id="@+id/btn_sep_2"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_alignBottom="@id/host_fb"
            android:layout_below="@id/image"
            android:layout_margin="7dp"
            android:layout_toLeftOf="@+id/host_li"
            android:background="#ccc"/>

        <ImageButton
            android:id="@+id/host_li"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/image"
            android:layout_toLeftOf="@+id/host_oto"
            android:background="@drawable/li"
            android:padding="5dp"
            android:layout_marginTop="10dp"/>

        <View
            android:id="@+id/btn_sep_3"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_alignBottom="@id/host_fb"
            android:layout_below="@id/image"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@+id/host_li"
            android:background="#ccc"/>

        <ImageButton
            android:id="@+id/host_oto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/image"
            android:background="@drawable/incoming_message_bg"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_margin="10dp"/>

    

    </RelativeLayout>



</RelativeLayout>
